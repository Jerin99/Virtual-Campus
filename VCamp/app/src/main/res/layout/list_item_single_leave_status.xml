<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.blure.complexview.ComplexView
        android:id="@+id/student_Leave_status_modal_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:radius="20dp"
        app:shadow="true"
        app:shadowAlpha="100"
        app:shadowColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shadowSpread="4">

        <RelativeLayout
            android:id="@+id/knowLeaveStatusLayout"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/student_home_tab_background">

            <TableLayout
                android:id="@+id/knowLeaveStatusTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:paddingStart="20dp"
                        android:text="For"
                        android:textSize="20sp" />

                    <TextView
                        android:paddingStart="20dp"
                        android:text=" : "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/leaveGrantedFor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="9dp"
                        android:textAlignment="textStart"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:paddingStart="20dp"
                        android:text="Approved On"
                        android:textSize="20sp" />

                    <TextView
                        android:paddingStart="20dp"
                        android:text=" : "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/leaveGrantedOn"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/leaveApprovedFor"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="20sp" />

                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/leaveStatus"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/knowLeaveStatusTable"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/password_reset_buttons"
                android:textSize="20sp" />

        </RelativeLayout>

    </com.blure.complexview.ComplexView>

