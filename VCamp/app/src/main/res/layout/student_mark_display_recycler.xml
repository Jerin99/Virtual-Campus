<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.blure.complexview.ComplexView
        android:id="@+id/student_Leave_status_modal_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:radius="20dp"
        app:shadow="true"
        app:shadowAlpha="100"
        app:shadowColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shadowSpread="4">

        <RelativeLayout
            android:id="@+id/marksDisplayLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/student_home_tab_background">

            <TableLayout
                android:id="@+id/marksDisplayTable"
                android:layout_width="match_parent"
                android:stretchColumns="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/semName"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="28sp"/>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:text="Subject"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:paddingStart="20dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:paddingStart="10dp"
                        android:textAlignment="center"
                        android:paddingEnd="10dp"
                        android:text="Mx. Marks"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="22sp"
                        android:paddingEnd="20dp"
                        android:text="Marks Obt."/>

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/sub1"
                        android:textSize="20dp"
                        android:paddingStart="20dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="100"/>
                    <TextView
                        android:id="@+id/mark1"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:paddingEnd="20dp"
                        android:textSize="20dp"/>

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/sub2"
                        android:paddingStart="20dp"
                        android:textSize="20dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:paddingStart="10dp"
                        android:textAlignment="center"
                        android:paddingEnd="10dp"
                        android:text="100"/>
                    <TextView
                        android:id="@+id/mark2"
                        android:layout_height="wrap_content"
                        android:paddingEnd="20dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:textSize="20dp"/>

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/sub3"
                        android:paddingStart="20dp"
                        android:textSize="20dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="100"/>
                    <TextView
                        android:id="@+id/mark3"
                        android:layout_height="wrap_content"
                        android:paddingEnd="20dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:textSize="20dp"/>

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/sub4"
                        android:textSize="20dp"
                        android:layout_width="150dp"
                        android:paddingStart="20dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="100"/>
                    <TextView
                        android:id="@+id/mark4"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingEnd="20dp"
                        android:textAlignment="center"
                        android:textSize="20dp"/>

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/sub5"
                        android:textSize="20dp"
                        android:layout_width="150dp"
                        android:paddingStart="20dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:paddingStart="10dp"
                        android:textAlignment="center"
                        android:paddingEnd="10dp"
                        android:text="100"/>
                    <TextView
                        android:id="@+id/mark5"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:paddingEnd="20dp"
                        android:layout_width="wrap_content"
                        android:textSize="20dp"/>

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/sub6"
                        android:textSize="20dp"
                        android:paddingStart="20dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="100"/>
                    <TextView
                        android:id="@+id/mark6"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:paddingEnd="20dp"
                        android:layout_width="wrap_content"
                        android:textSize="20dp"/>

                </TableRow>

                <View
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black"/>

                <TableRow android:layout_marginTop="10dp"
                    android:background="@drawable/password_reset_buttons"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:text="Total"
                        android:textSize="20dp"
                        android:layout_width="150dp"
                        android:paddingStart="20dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text=""
                        android:textSize="20dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>
                    <TextView
                        android:id="@+id/grade"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingEnd="20dp"
                        android:textAlignment="center"
                        android:textSize="20dp"/>

                </TableRow>

            </TableLayout>

        </RelativeLayout>

    </com.blure.complexview.ComplexView>

</androidx.constraintlayout.widget.ConstraintLayout>