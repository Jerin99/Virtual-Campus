<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".student_your_attendance_display_fragment">

    <TextView
        android:id="@+id/studentYourAttendanceHeadText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Attendance"
        android:textSize="28dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
        android:id="@+id/displayStudentAttendanceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="10dp"
        android:background="@drawable/student_home_tab_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentYourAttendanceHeadText"
        app:layout_constraintVertical_bias="0.098">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:text=""/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="Total"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="Attendance Obt"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:text="Attendance %"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:text="Semester I"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="180"/>
                <TextView
                    android:id="@+id/displayFirstSemDays"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="-"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/displayFirstSemAttendance"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="-"
                    android:textAlignment="center"
                    android:padding="10dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:text="Semester II"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="180"/>
                <TextView
                    android:id="@+id/displaySecondSemDays"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/displaySecondSemAttendance"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:padding="10dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:text="Semester III"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="180"/>
                <TextView
                    android:id="@+id/displayThirdSemDays"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="-"
                    android:textAlignment="center"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/displayThirdSemAttendance"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:padding="10dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:text="Semester IV"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="180"/>
                <TextView
                    android:id="@+id/displayFourthSemDays"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/displayFourthSemAttendance"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="-"
                    android:padding="10dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:text="Semester V"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="180"/>
                <TextView
                    android:id="@+id/displayFifthSemDays"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="-"
                    android:textAlignment="center"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/displayFifthSemAttendance"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="-"
                    android:textAlignment="center"
                    android:padding="10dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:text="Semester VI"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="180"/>
                <TextView
                    android:id="@+id/displaySixthSemDays"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="-"
                    android:textAlignment="center"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/displaySixthSemAttendance"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="-"
                    android:textAlignment="center"
                    android:padding="10dp"/>
            </TableRow>

        </TableLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>